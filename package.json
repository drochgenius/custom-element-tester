{
    "name": "@hmh/lit-element-tester",
    "version": "0.3.3",
    "description": "Framework to unit test custom elements on Chrome",
    "bin": {
        "lit-element-tester": "dist/lib/cli.js"
    },
    "main": "dist/lib/index.js",
    "scripts": {
        "clean": "rm -rf node_modules/ package-lock.json dist/",
        "prepare": "npm run build",
        "build": "tsc -p src/lib; tsc -p src/components; tsc -p src/browser; tsc -p src/test; tsc -p src",
        "watch": "tsc -p src/lib -w ",
        "help": "dist/lib/cli.js -h",
        "test": "dist/lib/cli.js dist/components/*.js -f test/runner.html",
        "test-dev": "dist/lib/cli.js dist/components/*.js -f test/runner.html -d"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/drochgenius/lit-element-tester.git"
    },
    "keywords": [],
    "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/drochgenius/lit-element-tester/issues"
    },
    "homepage": "https://github.com/drochgenius/lit-element-tester#readme",
    "dependencies": {
        "@hmh/nodejs-base-server": "latest",
        "chai": "latest",
        "commander": "latest",
        "istanbul-api": "^2.0.6",
        "istanbul-lib-coverage": "^2.0.1",
        "istanbul-lib-instrument": "^3.0.0",
        "mocha": "latest",
        "mocha-headless-chrome": "latest",
        "prettier": "^1.15.1",
        "remap-istanbul": "latest",
        "source-map-support": "latest"
    },
    "devDependencies": {
        "@polymer/lit-element": "^0.6.2",
        "@types/chai": "^4.1.7",
        "@types/prettier": "^1.13.2",
        "typescript": "latest"
    }
}
