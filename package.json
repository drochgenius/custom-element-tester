{
    "name": "@hmh/lit-element-tester",
    "version": "0.3.3",
    "description": "Framework to unit test custom elements on Chrome",
    "bin": {
        "lit-element-tester": "dist/lib/cli.js"
    },
    "main": "dist/lib/index.js",
    "scripts": {
        "prepare": "npm run build",
        "build": "tsc -p src/lib; tsc -p src/components; tsc -p src/browser; tsc -p src/test;",
        "watch": "tsc -p src/lib -w ",
        "help": "dist/lib/cli.js -h",
        "test": "dist/lib/cli.js dist/components/page-banner.js -f test/runner.html",
        "test-dev": "dist/lib/cli.js dist/components/*.js -f test/runner.html -d"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/drochgenius/lit-element-tester.git"
    },
    "keywords": [],
    "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/drochgenius/lit-element-tester/issues"
    },
    "homepage": "https://github.com/drochgenius/lit-element-tester#readme",
    "dependencies": {
        "chai": "^4.2.0",
        "commander": "^2.19.0",
        "istanbul-api": "^2.0.6",
        "istanbul-lib-coverage": "^2.0.1",
        "istanbul-lib-instrument": "^3.0.0",
        "mocha": "^5.2.0",
        "mocha-headless-chrome": "^2.0.1",
        "polyserve": "^0.27.13",
        "remap-istanbul": "^0.12.0",
        "source-map-support": "^0.5.9"
    },
    "devDependencies": {
        "typescript": "latest"
    }
}
