{
    "name": "@hmh/lit-element-tester",
    "version": "0.0.3",
    "description": "Framework to unit test custom elements on Chrome",
    "bin": {
        "lit-element-tester": "dist/lib/cli.js"
    },
    "main": "dist/lib/index.js",
    "scripts": {
        "prepublish": "npm run build",
        "build": "tsc -p src/lib; tsc -p src/components; tsc -p src/browser; tsc -p src/test;",
        "watch": "tsc -p src/lib -w ",
        "help": "dist/lib/cli.js -h",
        "test": "dist/lib/cli.js dist/components/page-banner.js -f test/runner.html",
        "test-dev": "dist/lib/cli.js dist/components/*.js -f test/runner.html -d"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/drochgenius/custom-element-tester.git"
    },
    "keywords": [],
    "author": "Dominique Rochefort <dominique.rochefort@hmhco.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/drochgenius/custom-element-tester/issues"
    },
    "homepage": "https://github.com/drochgenius/custom-element-tester#readme",
    "dependencies": {
        "chai": "^4.1.2",
        "commander": "^2.16.0",
        "istanbul": "^0.4.5",
        "mocha": "^5.2.0",
        "mocha-headless-chrome": "^2.0.1",
        "nyc": "^12.0.2",
        "polyserve": "^0.27.12",
        "remap-istanbul": "^0.11.1",
        "source-map-support": "^0.5.6"
    },
    "devDependencies": {
        "@types/browser-sync": "0.0.41",
        "@types/globby": "^8.0.0",
        "@types/istanbul": "^0.4.30",
        "typescript": "^3.0.1"
    }
}
