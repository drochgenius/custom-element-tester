{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "pretty": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
