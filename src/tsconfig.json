{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "../",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "pretty": true,
        "lib": ["esnext", "dom"]
    },
    "exclude": ["node_modules"]
}
